<Window x:Class="GolfClubSystem.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Admin Dashboard" Height="450" Width="800"
        materialDesign:ColorZoneAssist.Mode="Inverted"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <StackPanel Orientation="Vertical" Width="200" HorizontalAlignment="Left" Margin="5">
            <TextBlock Text="Админ панель" FontSize="24" FontWeight="Bold" Margin="5,5,0,20" />
            <Button Content="Manage Users" Style="{StaticResource MaterialDesignBody1Hyperlink}" Margin="0,10,0,0" />
            <Button Content="View Reports" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,10,0,0" />
            <Button Content="Settings" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,10,0,0" />
            <Button Content="Выход" Click="LogoutButton_Click" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,10,0,0" />
        </StackPanel>
        
        <!-- Content Area -->
        <Frame x:Name="MainFrame" Margin="200,0,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>